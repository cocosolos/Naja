@model List<Naja.Models.CharViewModel>

@using Humanizer


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Nation
            </th>
            <th>
                Current Location
            </th>
            <th>
                Time Played
            </th>
            <th>
                Created
            </th>
            <th>
                Last Online
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Char.Charname)
                </td>
                <td>
                    <img src="@item.NationImageUrl" alt="@item.NationName" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZoneName)
                </td>
                <td>
                    @TimeSpan.FromSeconds(item.Char.Playtime).Humanize(maxUnit: Humanizer.Localisation.TimeUnit.Day,
                             precision: 4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Char.Timecreated)
                </td>
                <td>
                    @item.Char.Lastupdate.Humanize()
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Char.Charid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Char.Charid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Char.Charid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
