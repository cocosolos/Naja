@model List<Naja.Models.CharViewModel>

@using Humanizer
@inject AccountService AccountService

@{
    ViewData["Title"] = "Index";
}

@{
    var characterId = AccountService.GetCharacterId();
}

<h1 class="text-center">Select Character</h1>

<table class="table text-center align-middle">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Nation
            </th>
            <th>
                Location
            </th>
            <th>
                Time Played
            </th>
            <th>
                Created
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Char.Charname)</b>
                </td>
                <td>
                    <img src="@item.NationImageUrl" alt="@item.NationName" />
                </td>
                <td>
                    <i>@Html.DisplayFor(modelItem => item.ZoneName)</i>
                </td>
                <td>
                    @TimeSpan.FromSeconds(item.Char.Playtime).Humanize(maxUnit: Humanizer.Localisation.TimeUnit.Day,
                             precision: 4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Char.Timecreated)
                </td>
                <td>
                    @if (item.Char.Charid == characterId)
                    {
                        <i class="bi bi-check-lg text-success align-middle" style="font-size: 1.5rem;"></i>
                    }
                    else
                    {
                        <form asp-action="SelectCharacter" asp-controller="AccountCharacters" method="post">
                            <input type="hidden" name="id" value="@item.Char.Charid" />
                            <button type="submit" class="btn btn-primary">Select</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
